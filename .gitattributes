# Auto detect text files and perform LF normalization
* text=auto

# Force CRLF for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Force LF for shell scripts  
*.sh text eol=lf

# Source code files
*.js text eol=crlf
*.ts text eol=crlf
*.vue text eol=crlf
*.json text eol=crlf
*.css text eol=crlf
*.scss text eol=crlf
*.html text eol=crlf
*.md text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
