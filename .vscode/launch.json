{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Frontend Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/clientapp",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/clientapp/.env"
    },
    {
      "name": "Debug Frontend Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/clientapp",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test"],
      "console": "integratedTerminal"
    }
  ]
}
